[color]
	ui = auto
[pack]
	threads = 0
[diff]
	renamelimit = 0
	tool = nvimdiff
	renames = true
	compactionHeuristic = true
	indentHeuristic = true
[difftool]
	prompt = false
[core]
	excludesfile = /Users/jason/.gitignore
	autocrlf = input
	editor = nvim
	precomposeunicode = true
	pager = less -F -X
[alias]
	bd = branch -d
	bD = branch -D
	cb = checkout -b
	co = checkout
	cp = cherry-pick
	dp = show
	forget = rm --cached
	id = rev-parse HEAD
	idb = !git symbolic-ref -q HEAD | cut -d'/' -f 3
	ignore = update-index --assume-unchanged
	lg = log --graph --abbrev-commit --date-order --format=format:'%Cblue%h%Creset %C(bold red)%d%Creset %s %Cgreen(%ar)%Creset' --all
	lgb = log --graph --abbrev-commit --date-order --format=format:'%Cblue%h%Creset %C(bold red)%d%Creset %s %Cgreen(%ar)%Creset'
	lgs = log --all --date-order --decorate --graph --oneline
	s = status --short
	staged = diff --staged --name-status
	unignore = update-index --no-assume-unchanged
	unstage = reset HEAD
	untrack = rm --cached

	# check out a local copy of a PR. https://gist.github.com/gnarf/5406589
	pr  = "!f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f"
	pr-clean = "!git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[difftool "nvimdiff"]
	cmd = nvim -d \"$LOCAL\" \"$REMOTE\"
	path = 
[difftool "sdiff"]
	cmd = sdiff \"$LOCAL\" \"$REMOTE\"
	path = 
[credential]
	helper = osxkeychain
[push]
	default = current
[tig]
	line-graphics = utf-8
	vertical-split = no
[tig "color"]
	cursor = white yellow normal
[tig "bind"]
	generic = <Ctrl-f> scroll-page-down
	generic = G move-first-line
	status = S !?git stash save --keep-index %(prompt)
[url "git@github.com:"]
	insteadOf = gh:
	pushInsteadOf = gh:
	pushInsteadOf = git://github.com/
[url "git@gist.github.com:"]
	insteadOf = gist:
	pushInsteadOf = gist:
	pushInsteadOf = git://gist.github.com/
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rebase]
	instructionFormat = [%an @ %ar] %s
	autostash = true
[pager]
	diff = diff-so-fancy | less --tabs=4 -RFX
	show = diff-so-fancy | less --tabs=4 -RFX
	log = diff-so-fancy | less --tabs=4 -RFX
[interactive]
	diffFilter = diff-so-fancy
[commit]
	verbose = true
[submodule]
	fetchJobs = 4
[stash]
	showPatch = true
