[color]
	ui = auto
[pack]
	threads = 0
[diff]
	renamelimit = 0
	tool = vimdiff
	renames = true
[difftool]
	prompt = false
[core]
	excludesfile = /Users/jason/.gitignore
	autocrlf = input
	editor = nvim
	precomposeunicode = true
	pager = less -F -X
[alias]
	cat = show
	cb = checkout -b
	co = checkout
	cp = cherry-pick
	forget = rm --cached
	id = rev-parse HEAD
	idb = !git symbolic-ref -q HEAD | cut -d'/' -f 3
	ignore = update-index --assume-unchanged
	last = cat-file commit HEAD
	lg = log --graph --abbrev-commit --decorate --date-order --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s - %an%C(bold yellow)%d%C(reset)' --all
	lgb = log --graph --abbrev-commit --decorate --date-order --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %s - %an%C(bold yellow)%d%C(reset)'

	# check out a local copy of a PR. https://gist.github.com/gnarf/5406589
	pr  = !f() { git fetch -fu ${2:-origin} refs/pull/$1/head:pr/$1 && git checkout pr/$1; }; f
	pr-clean = !git for-each-ref refs/heads/pr/* --format='%(refname)' | while read ref ; do branch=${ref#refs/heads/} ; git branch -D $branch ; done

	rb = branch -d
	st = status --short
	staged = diff --staged --name-status
	unignore = update-index --no-assume-unchanged
	unstage = reset HEAD
	untrack = rm --cached
	update = "!f() { git add --all; git commit -m '[TEMP]'; git pull --rebase; git reset HEAD~1; }; f"
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[credential]
	helper = osxkeychain
[push]
	default = simple
[tig]
	line-graphics = utf-8
[tig "color"]
	cursor = white 237
	title-focus = white blue
	author = 61 default
	date = 240 default
[tig "bind"]
	generic = <Ctrl-f> scroll-page-down
	generic = G move-first-line
	status = C !git commit --verbose
[url "git@github.com:"]
	insteadOf = gh:
	pushInsteadOf = gh:
	pushInsteadOf = git://github.com/
[url "git@gist.github.com:"]
	insteadOf = gist:
	pushInsteadOf = gist:
	pushInsteadOf = git://gist.github.com/
[filter "lfs"]
	clean = git-lfs clean %f
	smudge = git-lfs smudge %f
	required = true
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[rebase]
	instructionFormat = [%an @ %ar] %s
