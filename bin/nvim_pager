#!/usr/bin/env zsh

nvim \
	-u NONE \
	-c "colorscheme selenized" \
	-c "set number nolist signcolumn=no showtabline=0 noshowmode noruler laststatus=0 cmdheight=1 noshowcmd foldcolumn=0 termguicolors" \
	-c "autocmd TermOpen * normal G" \
	-c "map q :qa!<CR>" \
	-c "set clipboard+=unnamedplus" \
	-c "silent write! /tmp/kitty_scrollback_buffer | te cat /tmp/kitty_scrollback_buffer - "
